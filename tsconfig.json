{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // base options
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    // strictness options
    "strict": true,
    "noUncheckedIndexedAccess": true,

    "jsx": "preserve"
  }
}
